&--medium
    align-items stretch
    display flex
    flex-direction column
    max-width calc(50% - 10px)
    margin 20px 0
    &:nth-child(odd)
        margin-right 10px
    &:nth-child(even)
        margin-left 10px
    .entry
        &--thumbnail
            background-position center center
            background-size cover
            height 220px
        &--details
            display flex
            flex 1
            flex-direction column
            padding 20px 3.12%
            .details
                &--date
                    border-left 2px solid  $_theme
                    font-size 12px
                    margin-bottom 8px
                    padding-left .6em
                &--title
                    color #111
                    font-size 18px
                    line-height 1.6
                &--summary
                    color #333
                    font-size 14px
                    line-height 1.6
                    margin 12px 2.5%
                &--offset-flex
                    flex 1
                    min-height 8px
                    width 100%
                &--footer
                    align-items center
                    display flex
                    justify-content space-between
                    margin 0 2.5%
                &--category
                    color #555
                    text-decoration none
                    transition color .12s $ease-out-cubic
                    &::before
                        content '\f139'
                        font-family Ionicons
                        margin-right .4em
                    &:hover
                        color $_theme
                &--post-link
                    background #ccc
                    border 1px solid  #ccc
                    color #111
                    height 30px
                    letter-spacing .1em
                    line-height 30px
                    text-align center
                    text-decoration none
                    width 120px
                    transition all .12s $ease-out-cubic
                    &:hover
                        background transparent
                        border-color $_theme
                        color $_theme