&--large
    align-items stretch
    display flex
    .entry
        &--thumbnail
            background-position center center
            background-size cover
            min-height 280px
            overflow hidden
            position relative
            width 45%
        &--details
            display flex
            flex 1
            flex-direction column
            padding 25px 4.7% 20px 2.1%
            .details
                &--date
                    color #333
                    font-size 14px
                    margin-bottom 32px
                    position relative
                    &::before
                        background $_theme
                        bottom -17px
                        content ''
                        height 2px
                        left 0
                        position absolute
                        width 1.3em
                &--title
                    font-size 24px
                &--summary
                    color #333
                    font-size 15px
                    line-height 1.6
                    margin 24px 1.25% 0
                &--offset-flex
                    flex 1
                    min-height 30px
                    width 100%
                &--footer
                    align-items center
                    display flex
                    justify-content space-between
                    margin 0 1.25%
                &--category
                    color #555
                    text-decoration none
                    transition color .12s $ease-out-cubic
                    &::before
                        content '\f139'
                        font-family Ionicons
                        margin-right .4em
                    &:hover
                        color $_theme
                &--post-link
                    background #ccc
                    color #111
                    height 35px
                    letter-spacing .12em
                    line-height 35px
                    overflow hidden
                    position relative
                    text-align center
                    text-decoration none
                    width 125px
                    &::before
                        background $_theme
                        color #fff
                        content '\f215'
                        font-family Ionicons
                        font-size 14px
                        height 100%
                        left 0
                        letter-spacing .08em
                        line-height 35px
                        opacity 0
                        position absolute
                        transform scale(2)
                        transform-origin center center
                        transition all .12s $ease-out-cubic
                        top 0
                        width 100%
                    &:hover
                        &::before
                            opacity 1
                            transform scale(1.0)