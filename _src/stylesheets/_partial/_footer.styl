.global-footer
    background #eee
    margin-top 30px
    width 100%
    .footer
        &--jumper
            $size = 52px
            background #333
            cursor pointer
            height $size
            overflow hidden
            position relative
            text-align center
            text-decoration none
            transition line-height .12s ease
            width 100%
            &::before,
            &::after
                color #f9f9f9
                font-family Ionicons
                height $size
                left 50%
                line-height $size
                margin-left -($size / 2)
                position absolute
                text-align center
                transition all .8s ease
                width $size
            &::before
                content '\f366'
                font-size 24px
                top 0
            &::after
                content '\f214'
                font-size 16px
                top ($size * 1.4)
            &:hover
                &::before
                    top -($size * 1.4)
                &::after
                    top 0
        &--container
            @extend .container
            padding 80px 0